@inherits LayoutComponentBase

<PageTitle>JobCompare</PageTitle>



<div class="page">
    <div class="top-row navbar navbar-expand navbar-dark bg-dark py-1 px-4">
        <a class="navbar-brand me-3 text-white" href="">JobCompare</a>
        <ul class="navbar-nav flex-row">
            <li class="nav-item me-2">
                <NavLink class="nav-link px-2" href="upload" Match="NavLinkMatch.All">
                    <span class="oi oi-cloud-upload" aria-hidden="true"></span> File Upload
                </NavLink>
            </li>
            <li class="nav-item me-2">
                <NavLink class="nav-link px-2" href="recon">
                    <span class="oi oi-calculator" aria-hidden="true"></span> Reconciliation
                </NavLink>
            </li>
            <li class="nav-item me-2">
                <NavLink class="nav-link px-2" href="Amazon">
                    <span class="oi oi-plus" aria-hidden="true"></span> Amazon Orders
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link px-2" href="about">
                    <span class="oi oi-info" aria-hidden="true"></span> About
                </NavLink>
            </li>
        </ul>
    </div>
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
